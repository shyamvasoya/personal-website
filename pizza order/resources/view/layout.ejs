<body>
    <nav class="container mx-auto flex items-center justify-between py-4">
        <!-- py-4 mins 1rem from top or bootem -->
        <div>
            <a href="/">
                <img src="/img/logo.png" alt="logo">
            </a>
        </div>
        <div>
            <ul class="flex items-center">

                <li class="ml-6"><a href="/">Menu</a></li>
                <li class="ml-6"><a href="">Offers</a></li>
                <% if(user) { %>


                    <li class="ml-6">
                        <!-- logout per post req javani 6 aatle aahi form banvu pade -->
                        <form id="logout" action="/logout" method="POST">
                            <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                        </form>
                    </li>
                    <li class="ml-6 "><a href="/" id="loginUser">
                            LoggedIN User :- <%= user.email %>
                        </a></li>

                    <% } else { %>
                        <li class="ml-6"><a href="/register">Register</a></li>
                        <li class="ml-6"><a href="/login">Login</a></li>
                        <% } %>

                            <li class="ml-6">
                                <a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                                    <span class="cartCounter text-white font-bold pr-2">
                                        <%= session.cart ? session.cart.totalQty : '' %>
                                    </span>
                                    <img src="/img/cart.png" alt="cart">
                                </a>
                            </li>
            </ul>
        </div>
    </nav>

    <%- body %>

